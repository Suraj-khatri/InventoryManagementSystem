@model List<InventoryManagementSystem.Domain.FuelRequestsMessageVM>
@{
    ViewBag.Title = "Fuel Requisition";
}
<style>
    .dataTables_wrapper > div + div {
        overflow: auto;
        margin: 5px;
    }

        .dataTables_wrapper > div + div > div {
            padding-left: 0;
        }
    
</style>
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title">

        <i class="fa fa-list"></i> Place Fuel Requisition </div>
        <div class="box-tools pull-right">
            <a href="/FuelRequest/Create" class="btn btn-success btn-sm">
                <i class="fa fa-plus-circle"></i>
                Request Fuel
            </a>
        </div>
    </div>
    <div class="box-body tablefont">
        <table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead class="thead-dark">

                <tr>
                    <th>Fuel Request No.</th>
                    <th>Requested Date</th>
                    <th>Requested By</th>
                    <th>Requesting Branch</th>
                    <th>Priority</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.FuelRequestNo)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Requested_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.RequestedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.BranchName)
                    </td>
                    <td>
                        @if (item.Priority == "N")
                        {
                            @Html.Raw("Normal");
                        }
                        else if (item.Priority == "H")
                        {
                            @Html.Raw("High");
                        }
                        else if (item.Priority == "L")
                        {
                            @Html.Raw("Low");
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Status)
                    </td>
                    <td>
                        <a href="@Url.Action("ViewRequestedDetails","FuelRequest",new{id=item.Id})" class="btn btn-xs btn-info" title="View"><i class="fa fa-eye"></i>View</a>
                    </td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

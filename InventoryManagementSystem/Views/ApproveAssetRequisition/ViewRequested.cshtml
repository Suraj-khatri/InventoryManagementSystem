@model InventoryManagementSystem.Domain.FixedAssetsViewModel.AssetRequisitionMessageVM
@{
    ViewBag.Title = "Approve Asset Requisition";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"> <i class="fa fa-arrow-right"></i>Approve Asset Requisition</div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.id)
        @Html.HiddenFor(x=>x.priority)
        <div class="box-body formfont">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h4 style="margin-bottom:10px; color:chocolate"><i class="fa fa-info-circle"></i> Approve Asset Requisition</h4>
            <div id="tadd">
                <table class="table table-bordered" id="tbl_create">
                    <thead class="thead-dark" style="height:20px">
                        <tr>
                            <th>Asste Type</th>
                            <th>Requested Qty</th>
                            <th>Approved Qty</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.inreqList)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => item.assettype)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.qty)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.approved_qty)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.price)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <fieldset style="list-style: circle; list-style-type: circle; width: 98%;">
                <legend style="color:forestgreen;font:bold;font-size:small">Requisition Information</legend>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.approval_message, htmlAttributes: new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.approval_message, new { rows = "3", cols = "150", id = "reqmessage" })
                            @Html.ValidationMessageFor(x => x.approval_message, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="box-footer">
                <div class="col-md-12 col-md-offset-8">
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Approve</button>
                    <a href="/ApproveAssetRequisition/Index" class="btn btn-default"><i class="fa fa-close"></i> Cancel</a>
                </div>
            </div>
        </div>
    }
</div>

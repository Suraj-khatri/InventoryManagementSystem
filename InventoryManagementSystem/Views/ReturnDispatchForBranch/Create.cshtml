@model InventoryManagementSystem.Domain.InRequisitionMessageVM
@{
    ViewBag.Title = "Return Dispatch For Branch";
}
<style>
    input {
        height: 3rem;
    }
</style>
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"> <i class="fa fa-arrow-right"></i>Return Dispatch For Branch</div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.id)
        <div class="box-body formfont">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p>Please enter valid data! <a style="color:red">(* Required fields)</a></p>
            <h4 style="margin-bottom:10px; color:chocolate"><i class="fa fa-info-circle"></i> Return Dispatch For Branch</h4>
            <div class="row">
                <div class="col-md-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Return From Branch </label>
                        @Html.DropDownListFor(model => model.branch_id, Model.BranchNameList, new { @class = "form-control selectSearch", @id = "forwardedto" })
                    </div>
                </div>
                <div class="col-md-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Employee Name </label>
                        @Html.DropDownListFor(model => model.Requ_by, Model.EmployeeList, new { @class = "form-control selectSearch", @id = "reqby" })
                    </div>
                </div>
            </div>
            <fieldset style="list-style: circle; list-style-type: circle; width: 98%;">
                <legend style="color:forestgreen;font-size:small;font:bold">Product Information:</legend>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Product Name </label>
                            @Html.DropDownListFor(model => model.prod_code, Model.ProductNameList, new { @class = "form-control selectSearch", @id = "prodname" })
                        </div>
                    </div>
                    <div class="col-md-2 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Unit of Measurement </label>
                            <input type="text" readonly="readonly" id="unit" name="unit">
                        </div>
                    </div>
                    <div class="col-md-2 col-xs-12">
                        <div class="form-group">
                            <label class="control-label required">Qty </label>
                            <input type="number" id="qty" name="qty">
                        </div>
                    </div>
                    <div class="col-md-1 col-xs-12">
                        <div class="form-group">
                            <label class="control-label" style="color:#fff"> Add</label>
                            <button type="button" class="btn btn-xs btn-success" id="adddata" title="Add">Add</button>
                        </div>
                    </div>
                </div>
                <div id="tadd">
                    <table class="table table-bordered noDataTable" id="tbl_create">
                        <thead class="thead-dark" style="height:20px">
                            <tr>
                                <th>Product Id</th>
                                @*<th class="hidden">Tem Req Id</th>*@
                                <th>Product Name</th>
                                <th>Qty</th>
                                <th>Unit of Measurement</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="datalist"></tbody>
                    </table>
                </div>
            </fieldset>
            <fieldset style="list-style: circle; list-style-type: circle; width: 98%;">
                <legend style="color:forestgreen;font:bold;font-size:small">Other Information:</legend>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label required">Message </label>
                            @Html.TextAreaFor(model => model.Requ_Message, new { rows = "3", cols = "150", id = "reqmessage" })
                            @Html.ValidationMessageFor(x => x.Requ_Message, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Return To Branch </label>
                            @Html.DropDownListFor(model => model.Forwarded_To, Model.BranchNameList, new { @class = "form-control selectSearch", @id = "branchname" })
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Returned By Employee </label>
                            @Html.DropDownListFor(model => model.recommed_by, Model.EmployeeList, new { @class = "form-control selectSearch", @id = "recommendby" })
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="box-footer">
                <div class="col-md-12 col-md-offset-9">
                    <button type="button" id="saveorder" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
                </div>
            </div>
        </div>
    }
</div>
<div class="modal fade" id="myModal" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="color:chocolate"><i class="fa fa-info-circle fa-lg"></i> <strong>Product Other Information</strong></h4>
            </div>
            <div class="modal-body list-modal">
                <div id="prodinfo">
                </div>
            </div>
            <div class="modal-footer">
                <a class="btn btn-xs btn-success serialnosave" title="Save">Save</a>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Areas/ReturnDispatchForBranch/Create.js"></script>
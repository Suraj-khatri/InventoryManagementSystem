@model  IEnumerable<InventoryManagementSystem.Domain.BillInfoVM>
@{
    ViewBag.Title = " Purchase Voucher Request Details ";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-list"></i> Purchase Voucher Request Details </div>
        <div class="box-tools pull-right">
            <a href="/PurchaseVoucher/Create" class="btn btn-success btn-sm">
                <i class="fa fa-plus-circle"></i>
                Add Purchase Voucher Request
            </a>
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body tablefont">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th> Bill No</th>
                    <th>BillDate</th>
                    <th>Vendor Name</th>
                    <th>Order By</th>
                    <th>Forwarded To</th>
                    <th>Order Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.billno)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.bill_date)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.VendorName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.orderby)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.forwardedToName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Status)
                        </td>
                        <td>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


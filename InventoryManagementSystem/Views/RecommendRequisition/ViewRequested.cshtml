@model InventoryManagementSystem.Domain.InRequisitionMessageVM
@{
    ViewBag.Title = "Recommend Requisition";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"> <i class="fa fa-arrow-right"></i>Recommend Requisition</div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.id)
        <div class="box-body tablefont">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h4 style="margin-bottom:10px; color:chocolate"><i class="fa fa-info-circle"></i> Recommend Requisition</h4>
            <div id="tadd">
                <table class="table table-bordered" id="tbl_create">
                    <thead class="thead-dark" style="height:20px">
                        <tr>
                            <th>Product Name</th>
                            <th>Requested Quantity</th>
                            <th>Package Unit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.inreqList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => item.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.unit)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <fieldset style="list-style: circle; list-style-type: circle; width: 98%;">
                <legend style="color:forestgreen;font:bold;font-size:small">Requisition Information</legend>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Requ_Message, htmlAttributes: new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.Requ_Message, new { rows = "3", cols = "130", id = "reqmessage",@readonly="readonly" })
                            @Html.ValidationMessageFor(x => x.Requ_Message, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.recommed_message, htmlAttributes: new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.recommed_message, new { rows = "3", cols = "130", id = "reqmessage" })
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="box-footer">
                <div class="col-md-12 col-md-offset-8">
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Recommend</button>
                    <a href="@Url.Action("RejectRequisition","RecommendRequisition",new{Id=Model.id})" class="btn btn-reddit"><i class="fa fa-ban"></i> Reject</a>
                    <a href="/RecommendRequisition/Index" class="btn btn-default"><i class="fa fa-close"></i> Cancel</a>
                </div>
            </div>
        </div>
    }
</div>

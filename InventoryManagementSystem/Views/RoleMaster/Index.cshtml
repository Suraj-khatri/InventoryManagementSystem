@model  IEnumerable<InventoryManagementSystem.Domain.StaticDataDetailVM>
@{
    ViewBag.Title = "Role Master";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-list"></i> Static Data Detail, Category : Roles Detail </div>
        <div class="box-tools pull-right">
            <a href="/RoleMaster/Create" class="btn btn-success btn-sm">
                    <i class="fa fa-plus-circle"></i>
                    Add 
                </a>
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body tablefont">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Type Id</th>
                    <th>Detail Title</th>
                    <th>Data Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.TYPE_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.DETAIL_TITLE)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.DETAIL_DESC)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit","RoleMaster",new{Id=item.ROWID })" class="btn btn-xs btn-info" title="Edit"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>


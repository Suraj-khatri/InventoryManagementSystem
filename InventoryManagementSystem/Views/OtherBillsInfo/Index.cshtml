@model  IEnumerable<InventoryManagementSystem.Domain.OtherBillsInfoVM>
@{
    ViewBag.Title = "Other Bills Info";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-list"></i> Other Bills Info. </div>
        <div class="box-tools pull-right">
            <a href="/OtherBillsInfo/Create" class="btn btn-success btn-sm">
                <i class="fa fa-plus-circle"></i>
               Add Other Bills Info.
            </a>
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body tablefont">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>S.N.</th>
                    <th>Bill No</th>
                    <th>Bill Date</th>
                    <th>Bill Amount</th>
                    <th>Vendor Name</th>
                    <th>Is Paid</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var item in Model)
                {
                <tr>
                    <td style="width:3%">
                        @i
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.billno)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.bill_date)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.bill_amount)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.VendorName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.is_paid)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","OtherBillsInfo",new{Id=item.Id })" class="btn btn-xs btn-info" title="Edit Voucher"><i class="fa fa-edit"></i></a>
                        <a href="@Url.Action("Delete","OtherBillsInfo",new { id=item.Id})" class="btn btn-xs btn-reddit" title="Delete Voucher"><i>Delete Voucher</i></a>
                        @if (item.is_paid == false)
                        {
                            <a href="@Url.Action("IsPaid","OtherBillsInfo",new { id=item.Id})" class="btn btn-xs btn-reddit" title="Is Paid"><i>Is Paid</i></a>
                        }
                    </td>
                </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

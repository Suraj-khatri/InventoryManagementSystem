@model InventoryManagementSystem.Domain.RoleSetupVM.UserRoleVM
@{
    ViewBag.Title = "Assign Role";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-arrow-right"></i> Assign Role</div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.row_id)
        @Html.HiddenFor(x => x.AssignedRole)
        <div class="box-body formfont">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h4 style="margin-bottom:10px; color:chocolate"><i class="fa fa-info-circle"></i> Assign Role</h4>

            <div class="row">
                <div class="col-md-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">New Role:</label>
                        @Html.DropDownListFor(model => model.role_id, Model.UserRoleList, new { @class = "form-control selectSearch" })
                    </div>
                </div>
                <div class="col-md-2 col-xs-10">
                    <div class="form-group">
                        <label class="control-label">User Name:</label>
                        <div>
                            @Html.DisplayFor(model => model.UserName)
                        </div>
                    </div>
                </div>
                <div class="col-md-2 col-xs-10">
                    <div class="form-group">
                        <label class="control-label">Current Role:</label>
                        <div>
                            @Html.DisplayFor(model => model.AssignedRole)
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Remarks:</label>
                        @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row" id="previousRemarksContainer" style="display:none;">
                <div class="col-md-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Previous Remarks:</label>
                        <div class="well well-sm" style="background-color: #f5f5f5; border: 1px solid #ddd; padding: 10px;">
                            <textarea id="previousRemarks" class="form-control" readonly></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="box-footer text-right">
                <button type="button" class="btn btn-info" id="showRemarks">Previous Remarks</button>
                <a href="/UserDetail/Index" class="btn btn-default"><i class="fa fa-close"></i> Cancel</a>
                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
            </div>



        </div>
    }
</div>
@section Scripts {
    <script>
        $(document).ready(function() {
            $('#showRemarks').click(function() {
                $.ajax({
                    url: '@Url.Action("GetRemarks", "UserDetail")', 
                    type: 'GET',
                    data: { id: '@Model.row_id' },
                    success: function(data) {
                        $('#previousRemarks').val(data.Remarks);
                        $('#previousRemarksContainer').show(); 
                    },
                    error: function() {
                        alert('Failed to load remarks.');
                    }
                });
            });
        });
    </script>
}
@model InventoryManagementSystem.Domain.InDisposeMessageVM
@{
    ViewBag.Title = "Approve Disposal Request";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"> <i class="fa fa-arrow-right"></i>Approve Disposal Request</div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.Id)
        <div class="box-body tablefont">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h4 style="margin-bottom:10px; color:chocolate"><i class="fa fa-info-circle"></i> Approve Disposal Request</h4>
            <div id="tadd">
                <table class="table table-bordered noDataTable" id="tbl_approvedispose">
                    <thead class="thead-dark" style="height:20px">
                        <tr>
                            <th class="hidden">Product Id</th>
                            <th>Product Name</th>
                            <th>Requested Qty</th>
                            <th>Package Unit</th>
                            <th>Approved Qty</th>
                            <th>Stock In Hand</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.disposedetailsList.OrderBy(x=>x.ProductName.Trim()))
                        {
                            <tr>
                                <td class="hidden">
                                    @Html.DisplayFor(model => item.ProductId)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.ProductName)
                                </td>
                                <td id="requqty">
                                    @Html.DisplayFor(model => item.RequestedQty)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Unit)
                                </td>
                                <td id="approveqty">
                                    <input type="number" value="@item.RequestedQty" size="5" />
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.StockInHand)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <fieldset style="list-style: circle; list-style-type: circle; width: 98%;">
                <legend style="color:forestgreen;font:bold;font-size:small">Requisition Information</legend>
                <div class="hidden">
                    @Html.TextBoxFor(model => model.Id, new { id = "disposemesid" })
                </div>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            @Html.Label("Disposal Reason", htmlAttributes: new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.DisposeReason, new { rows = "3", cols = "120", id = "disposemessage", @readonly = "readonly" })
                            @Html.ValidationMessageFor(x => x.DisposeReason, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="box-footer">
                <div class="col-md-12 col-md-offset-8">
                    <button type="button" id="saveapprovedispose" class="btn btn-success"><i class="fa fa-save"></i> Approve</button>
                    <a href="@Url.Action("RejectForDispose","DisposeProduct",new{Id=Model.Id})" class="btn btn-reddit"><i class="fa fa-ban"></i> Reject</a>
                    <a href="/DisposeProduct/ApproveDisposeIndex" class="btn btn-default"><i class="fa fa-close"></i> Cancel</a>
                </div>
            </div>
        </div>
    }
</div>
<script src="~/Scripts/Areas/DisposeProduct/ApproveForDispose.js"></script>
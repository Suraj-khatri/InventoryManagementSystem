@model  IEnumerable<InventoryManagementSystem.Domain.InDisposeMessageVM>
@{
    ViewBag.Title = "Approve Dispose Request";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-list"></i> Approve Dispose Request </div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body tablefont">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Requested Date</th>
                    <th>Requested By</th>
                    <th>Branch</th>
                    <th>Department</th>
                    <th>Approve</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.RequestDate)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.RequestByName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.BranchName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.DepartmentName)
                        </td>
                        <td>
                            <a href="@Url.Action("ApproveForDispose","DisposeProduct",new { id=item.Id})" class="btn btn-xs btn-info" title="View"><i>View</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


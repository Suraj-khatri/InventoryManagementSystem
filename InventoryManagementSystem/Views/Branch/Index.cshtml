@model  IEnumerable<InventoryManagementSystem.Domain.BranchVM>
@{
    ViewBag.Title = "Branches";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-list"></i> Branch Details </div>
        <div class="box-tools pull-right">
            <a href="/Branch/Create" class="btn btn-success btn-sm">
                <i class="fa fa-plus-circle"></i>
                Add Branch
            </a>
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body tablefont">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>S.N.</th>
                    <th>Branch Name</th>
                    <th>Branch Code</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Contact Person</th>
                    <th>Is Active</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var item in Model)
                {
                <tr>
                    <td style="width:3%">
                        @i
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.BRANCH_NAME)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.BRANCH_SHORT_NAME)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.BRANCH_ADDRESS)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.BRANCH_PHONE)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.CONTACT_PERSON)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Is_Active)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","Branch",new{Id=item.BRANCH_ID })" class="btn btn-xs btn-info" title="Edit"><i class="fa fa-edit"></i></a>
                        <a onclick="confirm('Are you sure?') ? $('#DeleteForm_@item.BRANCH_ID').submit() : null;" class="btn btn-xs btn-danger" title="Remove">
                            <i class="fa fa-trash"></i>
                        </a>
                        @using (Html.BeginForm("Delete", "Branch", FormMethod.Post, new { id = "DeleteForm_" + item.BRANCH_ID }))
                        {
                            @Html.AntiForgeryToken()
                            <input id="id" name="id" value="@item.BRANCH_ID" style="display:none;" readonly="readonly" />
                        }
                    </td>
                </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>


@model  InventoryManagementSystem.Domain.CustomerVM
@{
    ViewBag.Title = "Vendor Details";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-list"></i> Vendor Details </div>
        <div class="box-tools pull-right">
            <a href="/Vendor/Create" class="btn btn-success btn-sm">
                <i class="fa fa-plus-circle"></i>
                Add Vendor
            </a>
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body tablefont">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>S.N</th>
                    <th>Vendor Code</th>
                    <th>Vendor Name</th>
                    <th>Vendor Address</th>
                    <th>Is Active</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var item in Model.CustomerVMList.OrderBy(x=>x.CustomerName.Trim()))
                {
                <tr>
                    <td style="width:3%">
                        @i
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.CustomerCode)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.CustomerAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.IsActive)
                    </td>

                    @if (Model.assignedrole.Trim() == "StoreKeeper(HeadOffice)" || Model.assignedrole.Trim() == "Admin_User")
                    {
                        <td>
                            <a href="@Url.Action("Edit","Vendor",new{Id=item.ID })" class="btn btn-xs btn-info" title="Edit"><i class="fa fa-edit"></i></a>
                            <a onclick="confirm('Are you sure?') ? $('#DeleteForm_@item.ID').submit() : null;" class="btn btn-xs btn-danger" title="Remove">
                                <i class="fa fa-trash"></i>
                            </a>
                            @using (Html.BeginForm("Delete", "Vendor", FormMethod.Post, new { id = "DeleteForm_" + item.ID }))
                            {
                                @Html.AntiForgeryToken()
                                <input id="id" name="id" value="@item.ID" style="display:none;" readonly="readonly" />
                            }
                        </td>
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>


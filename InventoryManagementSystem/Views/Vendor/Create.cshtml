@model InventoryManagementSystem.Domain.CustomerVM
@{
   ViewBag.Title = Model.ID == 0 ? "Add Vendor" : "Edit Vendor";
}

    <div class="box box-primary">
        <div class="box-header with-border">
            <div class="box-title">@((Model.ID > 0) ? Html.Raw("<i class='fa fa-pencil'></i> Edit Vendor") : Html.Raw("<i class='fa fa-plus'></i> Add Vendor"))</div>
            <div class="box-tools pull-right">
                <button class="btn btn-box-tool" type="button" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.ID)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p>Please enter valid data! <a style="color:red">(* Required fields)</a></p>
        <h4 style="margin-bottom:-10px;"><i class="fa fa-info-circle"></i> Vendor General Information</h4>
        <hr />
        <div class="row">
            <div class="col-md-4 col-xs-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "control-label required" })
                    @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.CustomerName, "", new { @class = "text-danger" })
                </div>
            </div>

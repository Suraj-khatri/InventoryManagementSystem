@model  IEnumerable<InventoryManagementSystem.Domain.InRequisitionMessageVM>
@{
    ViewBag.Title = "Place Requisition";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-list"></i> Place Requisition For :- </div>
        <div class="box-tools pull-right">
            @foreach (var groupItem in ViewBag.GroupList)
            {
                <a href="@Url.Action("Create", "PlaceRequisition", new { groupid = groupItem.id })" class="btn btn-success btn-sm">
                    <i class="fa fa-plus-circle"></i>
                    @groupItem.item_name
                </a>
            }
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body tablefont" style="overflow:auto">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Requisition No.</th>
                    <th>Requested Date</th>
                    <th>Requested By</th>
                    <th>Requesting Branch</th>
                    <th>Requesting Department</th>
                    <th>Is Schedule</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Req_no)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Requ_date)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.RequestedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.RequestingBranch)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.RequestingDepartment)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.IS_SCHEDULE)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.status)
                        </td>
                        <td>
                            <a href="@Url.Action("ViewRequestedDetails","BranchWiseHistory",new{id=item.id})" class="btn btn-xs btn-info" title="View"><i class="fa fa-eye"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


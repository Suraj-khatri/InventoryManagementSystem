@model InventoryManagementSystem.Domain.InRequisitionMessageVM
@{
    ViewBag.Title = "Place Requisition Entry";
}
<style>
    input {
        height: 3rem;
    }
</style>
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"> <i class="fa fa-arrow-right"></i>Place Requisition Entry</div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.id)
        <div class="box-body formfont">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p>Please enter valid data! <a style="color:red">(* Required fields)</a></p>
            <h4 style="margin-bottom:10px; color:chocolate"><i class="fa fa-info-circle"></i> Place Requisition Entry</h4>
            <fieldset style="list-style: circle; list-style-type: circle; width: 98%;">
                <legend style="color:forestgreen;font-size:small;font:bold">Product Information:</legend>
                <div class="row">
                    <div class="col-md-3 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Product Group Name </label>
                            @Html.DropDownListFor(model => model.ProdGroupId, Model.ProductGroupList, new { @class = "form-control", @id = "prodgroup" })
                            @Html.ValidationMessageFor(model => model.ProdGroupId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Product Name </label>
                            @Html.DropDownListFor(model => model.prod_code, Model.ProductNameList, new { @class = "form-control selectSearch", @id = "prodname" })
                            @Html.ValidationMessageFor(model => model.prod_code, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-2 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Unit of Measurement </label>
                            <input type="text" readonly="readonly" id="unit" name="unit">
                        </div>
                    </div>
                    <div class="col-md-2 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Qty </label>
                            <input type="number" id="qty" name="qty">
                        </div>
                    </div>
                    <div class="col-md-1 col-xs-12">
                        <div class="form-group">
                            <label class="control-label" style="color:#fff"> add</label>
                            <button type="button" class="btn btn-xs btn-success" id="adddata" title="add">add</button>
                        </div>
                    </div>

                </div>
                <div id="tadd">
                    <table class="table table-bordered noDataTable" id="tbl_create">
                        <thead class="thead-dark" style="height:20px">
                            <tr>
                                <th>Product Id</th>
                                <th>Product Name</th>
                                <th>Qty</th>
                                <th>Unit of Measurement</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="datalist"></tbody>
                    </table>
                </div>
            </fieldset>
            <fieldset style="list-style: circle; list-style-type: circle; width: 98%;">
                <legend style="color:forestgreen;font:bold;font-size:small">Order Information:</legend>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Requ_Message, htmlAttributes: new { @class = "control-label required" })
                            @Html.TextAreaFor(model => model.Requ_Message, new { rows = "3", cols = "150", id = "reqmessage" })
                            @Html.ValidationMessageFor(x => x.Requ_Message, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label class="control-label">Forwarded For Approval</label>
                                @Html.DropDownListFor(model => model.recommed_by, Model.SuperVisorList, new { @class = "form-control selectSearch", @id = "recommendby" })
                                @Html.ValidationMessageFor(x => x.recommed_by, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Request With Branch </label>
                            @Html.DropDownListFor(model => model.Forwarded_To, Model.BranchNameList, new { @class = "form-control selectSearch", @id = "forwardedto" })
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Priority </label>
                            @Html.DropDownListFor(model => model.priority_id, Model.PriorityList, new { @class = "form-control selectSearch", @id = "priority" })
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="box-footer">
                <div class="col-md-12 col-md-offset-9">
                    <button type="button" data-loading-text="Saving..Please Wait.." id="saveorder" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
                    <a href="/PlaceRequisition/Index" class="btn btn-default"><i class="fa fa-close"></i> Cancel</a>
                </div>
            </div>
        </div>
    }
</div>

<script src="~/Scripts/Areas/PlaceRequisition/Create.js"></script>

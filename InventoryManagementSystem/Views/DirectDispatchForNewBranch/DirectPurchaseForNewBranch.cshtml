@model InventoryManagementSystem.Domain.BillInfoVM
@{
    ViewBag.Title = "Direct Purchase Voucher entry";
}
<style>
        input[name=checkforwithoutvat] {
            width: 16px;
            height: 16px;
        }

    body {
        padding: 10px;
    }
</style>
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"> <i class="fa fa-arrow-right"></i> Direct Purchase Voucher Entry</div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.bill_id)
        <div class="box-body formfont">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p>Please enter valid data! <a style="color:red">(* Required fields)</a></p>
            <h4 style="margin-bottom:10px; color:chocolate"><i class="fa fa-info-circle"></i> Purchase Voucher Entry</h4>
            <label class="custom-control-label" style="font-size: 15px" for="defaultUnchecked">Check For Without VAT Purchase</label>
            <input type="checkbox" class="custom-control-input" name="checkforwithoutvat" id="defaultUnchecked">
            <fieldset style="list-style: circle; list-style-type: circle; width: 98%;">
                <legend style="color:forestgreen;font-size:small;font:bold">Product / Account Information:</legend>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Vendor Name </label>
                            @Html.DropDownListFor(model => model.vendor_code, Model.VendorList, new { @class = "form-control selectSearch", @id = "vendorname" })
                        </div>
                    </div>
                    <div class="col-md-8 col-xs-12 hidden">
                        <div class="form-group">
                            <label class="control-label">Bill Amount </label>
                            @Html.EditorFor(model => model.bill_amount, new { htmlAttributes = new { @class = "form-control", @id = "billamount" } })
                        </div>
                    </div>
                </div>
                <div id="tadd">
                    <table class="table table-bordered noDataTable" id="tbldirectpurchasefromdispatch">
                        <thead class="thead-dark" style="height:20px">
                            <tr>
                                <th>S.N</th>
                                <th>Product Id</th>
                                <th>Product Name</th>
                                <th>Unit</th>
                                <th>Qty</th>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>
                                    <input type="checkbox" name="master" id="masterCheck" />
                                </th>
                            </tr>
                        </thead>
                        <tbody id="datalist"></tbody>
                        <tfoot>
                            <tr id="tfooter"></tr>
                        </tfoot>
                    </table>
                </div>

            </fieldset>
            <fieldset style="list-style: circle; list-style-type: circle; width: 98%;">
                <legend style="color:forestgreen;font:bold;font-size:small">Bill Information:</legend>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.billno, htmlAttributes: new { @class = "control-label required" })
                            @Html.EditorFor(model => model.billno, new { htmlAttributes = new { @class = "form-control", @id = "billno" } })
                            @Html.ValidationMessageFor(x => x.billno, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.bill_date, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.bill_date, new { htmlAttributes = new { @class = "form-control", @id = "billdate" } })
                            @Html.ValidationMessageFor(x => x.bill_date, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.bill_notes, htmlAttributes: new { @class = "control-label required" })
                            @Html.TextAreaFor(model => model.bill_notes, new { rows = "3", cols = "150", id = "billnotes" })
                            @Html.ValidationMessageFor(x => x.bill_notes, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </fieldset>

            <div class="box-footer">
                <div class="col-md-12 col-md-offset-9">
                    <button type="button" data-loading-text="Saving..Please Wait.." id="saveorder" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
                </div>
            </div>
        </div>
    }
</div>

<script src="~/Scripts/sweetalert.min.js"></script>
<script>
     var strValue = "@((string)ViewBag.msg)";
    if (strValue !== null && strValue !== '') {
        swal("", strValue, "success");
    }
</script>
<script src="~/Scripts/Areas/Direct Dispatch For New Branch/DirectPurchaseForNewBranch.js"></script>



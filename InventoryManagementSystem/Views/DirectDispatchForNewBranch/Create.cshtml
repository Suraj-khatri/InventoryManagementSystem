@model InventoryManagementSystem.Domain.InRequisitionMessageVM
@{
    ViewBag.Title = "Direct Dispatch For New Branch";
}

<style>
   
    th {
        background: #439842;
        position: sticky;
        top: 0; /*Don't forget this, required for the stickiness*/
        box-shadow: 0 2px 2px -1px rgba(0, 0, 0, 0.4);
    }
    #unit,#qty{
        height:3rem;
    }
</style>
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title">
            <i class="fa fa-arrow-right"></i> Direct Dispatch For New Branch &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="checkbox" checked="checked" value="2" id="nonprintingItem" />@*2 is actual id*@
            <label class="control-label" style="font-size: 16px; color:Highlight">
                Non-Printing Stationery Items
            </label>&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="checkbox" id="printingItem" value="3" />@*3 is actual id*@
            <label class="control-label" style="font-size: 16px; color: Highlight">
                Printing Stationery Items
            </label>
        </div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.id)
<div class="box-body formfont">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <p>Please enter valid data! <a style="color:red">(* Required fields)</a></p>
    <h4 style="margin-bottom:10px; color:chocolate"><i class="fa fa-info-circle"></i> Dispatch For New Branch</h4>
    <div class="row">
        <div class="col-md-4 col-xs-12">
            <div class="form-group">
                <label class="control-label">Sent To Branch </label>
                @Html.DropDownListFor(model => model.branch_id, Model.BranchNameList, new { @class = "form-control selectSearch", @id = "branchname" })
            </div>
        </div>
        <div class="col-md-4 col-xs-12">
            <div class="form-group">
                <label class="control-label">Acknowledging Employee Name </label>
                @Html.DropDownListFor(model => model.Requ_by, Model.EmployeeList, new { @class = "form-control selectSearch", @id = "reqby" })
            </div>
        </div>
    </div>
    <fieldset style="list-style: circle; list-style-type: circle; width: 98%;">
        <legend style="color:forestgreen;font-size:small;font:bold">Product Information:</legend>
        <div class="row">
            <div class="col-md-4 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Product Name </label>
                    @Html.DropDownListFor(model => model.prod_code, Model.ProductNameList, new { @class = "form-control selectSearch", @id = "prodname" })
                </div>
            </div>
            <div class="col-md-2 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Unit of Measurement </label>
                    <input type="text" readonly="readonly" id="unit" name="unit">
                </div>
            </div>
            <div class="col-md-2 col-xs-12">
                <div class="form-group">
                    <label class="control-label required">Qty </label>
                    <input type="number" id="qty" name="qty">
                </div>
            </div>
            <div class="col-md-1 col-xs-12">
                <div class="form-group">
                    <label class="control-label" style="color:#fff"> Add</label>
                    <button type="button" class="btn btn-xs btn-success" id="adddata" title="Add">Add</button>
                </div>
            </div>
        </div>
        <div id="tadd">
            <table class="table table-bordered table-sm noDataTable" id="tbl_create">
                <thead class="thead-dark" style="height:20px">
                    <tr>
                        <th>S.N.</th>
                        <th style="width:5%">Product Id</th>
                        <th>Product Name</th>
                        <th>Unit</th>
                        <th style="width:5%">Qty</th>
                        <th><input type="checkbox" name="master" id="masterCheck" /></th>
                        <th>Stock In Hand</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="datalist"></tbody>
            </table>
        </div>
    </fieldset>
    <fieldset style="list-style: circle; list-style-type: circle; width: 98%;">
        <legend style="color:forestgreen;font:bold;font-size:small">Other Information:</legend>
        <div class="row">
            <div class="col-md-4 col-xs-12">
                <div class="form-group">
                    <label class="control-label required">Dispatch Message </label>
                    @Html.TextAreaFor(model => model.Delivery_Message, new { rows = "3", cols = "150", id = "dispatchmessage" })
                    @Html.ValidationMessageFor(x => x.Delivery_Message, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-xs-12">
                <div class="form-group">
                    <label class="control-label">From Branch </label>
                    @Html.DropDownListFor(model => model.Forwarded_To, Model.BranchNameList, new { @class = "form-control selectSearch", @id = "forwardedto" })
                </div>
            </div>
            <div class="col-md-4 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Dispatch By</label>
                    @Html.DropDownListFor(model => model.Delivered_By, Model.EmployeeList, new { @class = "form-control selectSearch", @id = "dispatchby" })
                </div>
            </div>
        </div>
    </fieldset>
    <div class="box-footer">
        <div class="col-md-12 col-md-offset-9">
            <a href="@Url.Action("DirectPurchaseForNewBranch", "DirectDispatchForNewBranch")" class="btn btn-reddit" id="btnPurchase" style="background-color:aqua" title="Direct Purchase"><i class="fa fa-shopping-cart"></i>Purchase</a>
            <button type="button" data-loading-text="Saving..Please Wait.." id="saveorder" class="btn btn-success"><i class="fa fa-save"></i> Dispatch</button>
        </div>
    </div>
</div>
    }
</div>

<script src="~/Scripts/Areas/Direct Dispatch For New Branch/Create.js"></script>
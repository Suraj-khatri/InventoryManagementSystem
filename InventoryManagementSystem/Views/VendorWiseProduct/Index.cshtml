@model InventoryManagementSystem.Domain.VendorBidPriceVM
@{
    ViewBag.Title = "Vendor Wise Product Detail";
}
<style>
    th {
        background: #439842;
        position: sticky;
        top: 0; /*Don't forget this, required for the stickiness*/
        box-shadow: 0 2px 2px -1px rgba(0, 0, 0, 0.4);
    }
</style>
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title">Product Assignment With Branch</div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "TicketReport" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.id)
        <div class="box-body formfont">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Vendor </label>
                        @Html.DropDownListFor(model => model.vendor_id, Model.VendorList, new { @class = "form-control selectSearch" })
                    </div>
                </div>
                <div class="col-md-4 col-xs-12">
                    <div class="form-group">
                        <br />
                        <button type="submit" class="btn btn-success"><i class="fa fa-search"></i> Search</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="tablefont" style="overflow:auto; height:430px">
            <table class="table table-bordered noDataTable">
                <thead class="thead-dark">
                    <tr>
                        <th>S.N</th>
                        <th class="hidden">Id</th>
                        <th>Vendor Name</th>
                        <th>Product Name</th>
                        <th><input type="checkbox" id="masterCheck" /></th>
                        <th style="width:3%">Rate</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;}
                    @foreach (var item in Model.VendorBidPriceVMList.OrderBy(x => x.INPRODUCTs.porduct_code.Trim()))
                    {
                        <tr>
                            <td>
                                @i
                            </td>
                            <td class="hidden">
                                @Html.DisplayFor(model => item.id)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Customers.CustomerName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.INPRODUCTs.porduct_code)
                            </td>
                            <td>
                                <input type="checkbox" name="row-check" />
                            </td>
                            <td id="vendorrate">
                                <input type="text" data-format="#.00" name="vendorrate" value="@item.price.ToString("#.00")" />
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
        <div class="box-footer">
            <div class="col-md-3 pull-right">
                <button type="button" data-loading-text="Saving..Please Wait.." id="savemultipleproduct" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
                <a href="/BranchAssignMultipleProducts/Index" class="btn btn-default"><i class="fa fa-close"></i> Cancel</a>
            </div>
        </div>
    }
</div>

<script>
    $(function () {
        $("#masterCheck").on("click", function () {
            if ($("input:checkbox").prop("checked")) {
                $("input:checkbox[name='row-check']").prop("checked", true);
            } else {
                $("input:checkbox[name='row-check']").prop("checked", false);
            }
        });

        $("input:checkbox[name='row-check']").on("change", function () {
            var total_check_boxes = $("input:checkbox[name='row-check']").length;
            var total_checked_boxes = $("input:checkbox[name='row-check']:checked").length;

            if (total_check_boxes === total_checked_boxes) {
                $("#masterCheck").prop("checked", true);
            }
            else {
                $("#masterCheck").prop("checked", false);
            }
        });
    });

    $("#savemultipleproduct").click(function (e) {
        var $btn = $(this);
        $btn.button('loading');
        var record = {};
        var VendorBidPriceVMList = [];
        $("table tr:not(:first)").each(function () {
            var tdlist = $(this).find("td");
            var Item = {
                id: $(tdlist[1]).text(),
                IsRowCheck: $(tdlist[4]).find("input:checkbox").is(':checked'),
                price: $(this).closest('tr').find("#vendorrate :input[type='text']").val(),
            };
            VendorBidPriceVMList.push(Item);
        })
        record.VendorBidPriceVMList = VendorBidPriceVMList;

        $.ajax({
            url: "/VendorWiseProduct/UpdateData",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(record),
            success: function (data) {
                if (data.success == true) {
                    $btn.button('reset');
                    alert(data.mes);
                    window.location.replace("/VendorWiseProduct/Index", true)
                }
                else {
                     $btn.button('reset');
                    alert(data.err);
                }
            },
            error: function (err) {
                $btn.button('reset');
                alert("error occured!!");
            }
        });
    });
</script>
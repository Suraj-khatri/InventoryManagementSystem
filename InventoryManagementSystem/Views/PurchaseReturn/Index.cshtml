
@model  InventoryManagementSystem.Domain.InPurchaseVM
@{
    ViewBag.Title = "Purchase Return";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-list"></i> Purchase Return</div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body tablefont">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <span class="hidden" id="billid">
                @Html.DisplayFor(model => model.bill_id, new { htmlAttributes = new { @class = "form-control" } })
            </span>
            <div class="col-md-4 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Bill No. :  </label>
                    <span id="billno">
                        @Html.DisplayFor(model => model.BillNo, new { htmlAttributes = new { @class = "form-control" } })
                    </span>
                </div>
            </div>
            <div class="col-md-4 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Vendor Name :  </label>
                    <span id="vendorname">
                        @Html.DisplayFor(model => model.VendorName, new { htmlAttributes = new { @class = "form-control" } })
                    </span>
                </div>
            </div>
        </div>
        <table class="table table-bordered" id="tbldata" style="font-size:11px">
            <thead class="thead-dark">
                <tr>
                    <th>Product Name</th>
                    <th>Purchase Qty</th>
                    <th>Rate</th>
                    <th>Amount</th>
                    <th id="retqty">Return Qty</th>
                    <th id="rqty">Return Qty</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.InPurchaseList)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.p_qty)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.p_rate)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Amount)
                    </td>
                    <td>
                        <input type="number" value="0" size="5" />
                    </td>
                    <td id="showretqty">
                        @Html.DisplayFor(model => item.p_qty)
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <br />
        <div class="row">
            <div class="col-md-4 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Narration </label>
                    <textarea style="text-align:start" rows="3" cols="50" name="narration" id="narr">
                    </textarea>
                </div>
            </div>
        </div>

        <div class="box-footer">
            <div class="col-md-12 col-md-offset-7">
                <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
                <label class="custom-control-label" for="defaultUnchecked">Check For Return All </label>
                <a href="/PurchasePendingBills/Index" class="btn btn-default"><i class="fa fa-close"></i> Cancel</a>
                <button type="button" id="saveorder" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Areas/PurchaseReturn/Index.js"></script>
@model  IEnumerable<InventoryManagementSystem.Domain.In_ItemVM>
@{
    ViewBag.Title = "Inventory Group";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-list"></i> Inventory Product </div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body tablefont">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>S.N</th>
                    <th>Group Name</th>
                    <th>Description</th>
                    <th>Is Active</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width:3%">
                            @i
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.item_name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.item_desc)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Is_Active)
                        </td>
                        <td>
                            <a href="@Url.Action("InActiveIndex","InProduct",new{Id=item.id })" class="btn btn-xs btn-info" title="View Product"><i class="fa fa-eye"></i></a>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>


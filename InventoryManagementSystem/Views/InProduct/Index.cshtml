@model  IEnumerable<InventoryManagementSystem.Domain.In_ItemVM>
@{
    ViewBag.Title = "Product Group";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-list"></i> @ViewBag.ItemName </div>
        <div class="box-tools pull-right">
            <a href="/InItem/Index" class="btn btn-default btn-sm">
                <i class="fa fa-list"></i>
                Back to List
            </a>
            <a href="/InProduct/Create/@ViewBag.ItemId" class="btn btn-success btn-sm">
                <i class="fa fa-plus-circle"></i>
                Add Product
            </a>
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body tablefont">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>S.N.</th>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Is Active</th>
                    <th style="text-align:center">Action</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var item in Model.OrderBy(x=>x.item_name.Trim()))
                {
                <tr>
                    <td style="width:3%">
                        @i
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.item_name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.item_desc)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Is_Active)
                    </td>
                    <td style="text-align:center">
                        <a href="@Url.Action("Edit","InProduct",new{Id=item.id })" class="btn btn-xs btn-info" title="Edit"><i class="fa fa-edit"></i></a>
                        <a href="@Url.Action("Create","VendorAssign",new{Id=item.id })" class="btn btn-xs btn-bitbucket" title="Vendor Assign"><i class="fa fa-address-card"></i></a>
                        <a href="@Url.Action("Create","BranchAssign",new{Id=item.id })" class="btn btn-xs btn-success" title="Branch Assign"><i class="fa fa-adn"></i></a>
                        <a href="@Url.Action("TransferProduct","InProduct",new{Id=item.id })" class="btn btn-xs btn-default" title="Transfer Product"><i class="fa fa-exchange"></i></a>
                        @if (item.Is_Active == true)
                        {
                            <a onclick="confirm('Are you sure?') ? $('#DeleteForm_@item.id').submit() : null;" class="btn btn-xs btn-danger" title="Remove">
                                <i class="fa fa-trash"></i>
                            </a>
                        }
                        @using (Html.BeginForm("Delete", "InProduct", FormMethod.Post, new { id = "DeleteForm_" + item.id }))
                        {
                            @Html.AntiForgeryToken()
                            <input id="id" name="id" value="@item.id" style="display:none;" readonly="readonly" />
                        }
                    </td>
                </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>


@model  IEnumerable<InventoryManagementSystem.Domain.In_ItemVM>
@{
    ViewBag.Title = "Product Group";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-list"></i> @ViewBag.ItemName </div>
        <div class="box-tools pull-right">
            <a href="/InItem/InActiveIndex" class="btn btn-default btn-sm">
                <i class="fa fa-list"></i>
                Back to List
            </a>
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body tablefont">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>S.N.</th>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Is Active</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var item in Model.OrderBy(x => x.item_name.Trim()))
                {
                    <tr>
                        <td style="width:3%">
                            @i
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.item_name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.item_desc)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Is_Active)
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>


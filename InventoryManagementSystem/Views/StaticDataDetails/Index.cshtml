@model  IEnumerable<InventoryManagementSystem.Domain.StaticDataDetailVM>
@{
    ViewBag.Title = "Category Wise Static Data List";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-list"></i> Static Data Details, Category : @ViewBag.CategoryName </div>
        <div class="box-tools pull-right">
            <a href="/GeneralDataSetting/Index" class="btn btn-default btn-sm">
                <i class="fa fa-list"></i>
                Back to List
            </a>
            <a href="/StaticDataDetails/Create/@ViewBag.CategoryId" class="btn btn-success btn-sm">
                <i class="fa fa-plus-circle"></i>
                Add
            </a>
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body tablefont">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Type Id</th>
                    <th>Data Title</th>
                    <th>Data Description</th>
                    <th>Is Active</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.TYPE_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.DETAIL_TITLE)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.DETAIL_DESC)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.IsActive)
                    </td>
                    <td>
                        @if (item.IsActive == true)
                        {
                            <a href="@Url.Action("Edit","StaticDataDetails",new{Id=item.ROWID })" class="btn btn-xs btn-info" title="Edit"><i class="fa fa-edit"></i></a>
                            <a onclick="confirm('Are you sure?') ? $('#DeleteForm_@item.ROWID').submit() : null;" class="btn btn-xs btn-danger" title="Remove">
                                <i class="fa fa-trash"></i>
                            </a>
                        }
                        @using (Html.BeginForm("Delete", "StaticDataDetails", FormMethod.Post, new { id = "DeleteForm_" + item.ROWID }))
                        {
                            @Html.AntiForgeryToken()
                            <input id="id" name="id" value="@item.ROWID" style="display:none;" readonly="readonly" />
                        }
                    </td>
                </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>


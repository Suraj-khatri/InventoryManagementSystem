@model  IEnumerable<InventoryManagementSystem.Domain.FixedAssetsViewModel.AssetRequisitionMessageVM>
@{
    ViewBag.Title = "Asset Requisition";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-list"></i> Asset Requisition Details </div>
        <div class="box-tools pull-right">
            <a href="/AssetRequisition/Create" class="btn btn-success btn-sm">
                <i class="fa fa-plus-circle"></i>
                Add
            </a>
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body formfont">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Forwarded Branch</th>
                    <th>Forwarded To</th>
                    <th>Priority</th>
                    <th>Status</th>
                    <th>Narration</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.BranchName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.ForwardedTo)
                        </td>
                        <td>
                            @if (item.priority == "N")
                            {
                                @Html.Raw("Normal");
                            }
                            else if (item.priority == "H")
                            {
                                @Html.Raw("High");
                            }
                            else if (item.priority == "L")
                            {
                                @Html.Raw("Low");
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.status)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.narration)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@model InventoryManagementSystem.Domain.FixedAssetsViewModel.AssetRequisitionMessageVM
@{
    ViewBag.Title = "Asset Requisition Entry";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"> <i class="fa fa-arrow-right"></i>Asset Requisition Entry</div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.id)
        <div class="box-body formfont">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p>Please enter valid data! <a style="color:red">(* Required fields)</a></p>
            <h4 style="margin-bottom:10px; color:chocolate"><i class="fa fa-info-circle"></i> Asset Requisition Entry</h4>
            <fieldset style="list-style: circle; list-style-type: circle; width: 98%;">
                <legend style="color:forestgreen;font-size:small;font:bold">Asset Information:</legend>
                <div class="row">
                    <div class="col-md-5 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Asset Type </label>
                            @Html.DropDownListFor(model => model.asset_code, Model.AssetProductList, new { @class = "form-control selectSearch", @id = "prodname" })
                        </div>
                    </div>
                    <div class="col-md-2 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Qty </label>
                            <input type="number" id="qty" name="qty">
                        </div>
                    </div>
                    <div class="col-md-3 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Tentative Price </label>
                            <input type="number" id="price" name="price">
                        </div>
                    </div>
                    <div class="col-md-1 col-xs-12">
                        <label class="control-label" style="color:#fff"> Add</label>
                        <a class="btn btn-xs btn-success" id="adddata" title="Add">Add</a>
                    </div>
                </div>
                <div id="tadd">
                    <table class="table table-bordered noDataTable" id="tbl_create">
                        <thead class="thead-dark" style="height:20px">
                            <tr>
                                <th>Id</th>
                                <th>Asset Name</th>
                                <th>Qty</th>
                                <th>Amount</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="datalist"></tbody>
                    </table>
                </div>
            </fieldset>
            <fieldset style="list-style: circle; list-style-type: circle; width: 98%;">
                <legend style="color:forestgreen;font:bold;font-size:small">Order Information:</legend>
                <div class="row">
                    <div class="col-md-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Forwarded Branch </label>
                            @Html.DropDownListFor(model => model.forwarded_branch, Model.BranchNameList, new { @class = "form-control selectSearch", @id = "forwardedbranch" })
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Priority </label>
                            @Html.DropDownListFor(model => model.priority_id, Model.PriorityList, new { @class = "form-control selectSearch", @id = "priority" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Forwarded To </label>
                            @Html.DropDownListFor(model => model.approved_by, Model.EmployeeList, new { @class = "form-control selectSearch", @id = "approvedby" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Message </label>
                            @Html.TextAreaFor(model => model.narration, new { rows = "3", cols = "150", id = "message" })
                            @Html.ValidationMessageFor(x => x.narration, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="box-footer">
                <div class="col-md-12 col-md-offset-9">
                    <button type="button" id="saveorder" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
                    <a href="/AssetRequisition/Index" class="btn btn-default"><i class="fa fa-close"></i> Cancel</a>
                </div>
            </div>
        </div>
    }
</div>

<script src="~/Scripts/Areas/AssetRequisition/Create.js"></script>
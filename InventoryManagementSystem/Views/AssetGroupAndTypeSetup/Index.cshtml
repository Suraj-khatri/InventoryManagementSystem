@model  IEnumerable<InventoryManagementSystem.Domain.FixedAssetsViewModel.AssetItemVM>
@{
    ViewBag.Title = "Fised Asset Group";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-list"></i> Depreciable Asset </div>
        <div class="box-tools pull-right">
            <a href="/AssetGroupAndTypeSetup/CreateDepAsset" class="btn btn-success btn-sm">
                <i class="fa fa-plus-circle"></i>
                New Group
            </a>
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body formfont">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>S.N</th>
                    <th>Group Name</th>
                    <th>Description</th>
                    <th>Is Active</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var item in Model.Where(x=>x.parent_id==1))
                {
                    <tr>
                        <td style="width:3%">
                            @i
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.item_name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.item_desc)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Is_Active)
                        </td>
                    <td>
                        <a href="@Url.Action("EditDepAsset","AssetGroupAndTypeSetup",new{Id=item.id })" class="btn btn-xs btn-info" title="Edit"><i class="fa fa-edit"></i></a>
                        <a href="@Url.Action("IndexDepAsset","AssetSubGroup",new{Id=item.id })" class="btn btn-xs btn-info" title="View Group"><i class="fa fa-eye"></i></a>
                        @if (item.Is_Active == true)
                        {
                            <a onclick="confirm('Are you sure?') ? $('#DeleteForm_@item.id').submit() : null;" class="btn btn-xs btn-danger" title="Remove">
                                <i class="fa fa-trash"></i>
                            </a>
                        }
                        @using (Html.BeginForm("Delete", "AssetGroupAndTypeSetup", FormMethod.Post, new { id = "DeleteForm_" + item.id }))
                        {
                            @Html.AntiForgeryToken()
                            <input id="id" name="id" value="@item.id" style="display:none;" readonly="readonly" />
                        }
                    </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

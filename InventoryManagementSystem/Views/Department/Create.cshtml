@model InventoryManagementSystem.Domain.DepartmentsVM
@{
    ViewBag.Title = "Department Details";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title">Assign Department Details</div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.DEPARTMENT_ID)

        <div class="box-body formfont">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p>Please enter valid data! <a style="color:red">(* Required fields)</a></p>
            <div class="row">
                <div class="col-md-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Branch Name </label>
                        @Html.DropDownListFor(model => model.BRANCH_ID, Model.BranchList, new { @class = "form-control selectSearch" })
                    </div>
                </div>
                <div class="col-md-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Department Name </label>
                        @Html.DropDownListFor(model => model.ROWID, Model.DepartmentList, new { @class = "form-control selectSearch",@id="deptname" })
                    </div>
                </div>
                <div class="col-md-4 col-xs-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DEPARTMENT_SHORT_NAME, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.DEPARTMENT_SHORT_NAME, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <div class="col-md-12 col-md-offset-9">
                    <a href="/Department/Index" class="btn btn-default"><i class="fa fa-close"></i> Cancel</a>
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
                </div>
            </div>
        </div>
    }
</div>

<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"> Add Department Detail</div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>

    @using (Html.BeginForm("CreateDepartment","Department"))
    {
        @Html.AntiForgeryToken()
        <div class="box-body formfont">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p>Please enter valid data! <a style="color:red">(* Required fields)</a></p>
            <div class="row">
                <div class="col-md-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label required">Department Name </label>
                        @Html.EditorFor(model => model.StaticDataDetail.DETAIL_TITLE, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(x => x.StaticDataDetail.DETAIL_TITLE, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label required">Department Short Name </label>
                        @Html.EditorFor(model => model.StaticDataDetail.DETAIL_DESC, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(x => x.StaticDataDetail.DETAIL_DESC, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <div class="col-md-12 col-md-offset-9">
                    <a href="/Department/Index" class="btn btn-default"><i class="fa fa-close"></i> Cancel</a>
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
                </div>
            </div>
        </div>
    }
</div>
@Scripts.Render("~/bundles/jqueryval")

<script>
    $('#deptname').change(function () {
        $.ajax({
            url: '/Department/GetDeptShortName',
            type: 'POST',
            data: { deptname: $('#deptname').val() },
            success: function (data) {
                $('#DEPARTMENT_SHORT_NAME').val(data);
                $('#DEPARTMENT_SHORT_NAME').text(data);
            }
        });
    });

    $(document).ready(function () {
        $('#deptname').change();
    })
</script>





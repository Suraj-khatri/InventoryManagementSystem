@model  List<InventoryManagementSystem.Domain.DepartmentsVM>
@{
    ViewBag.Title = "Department Details";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title"><i class="fa fa-list"></i> Department Details </div>
        <div class="box-tools pull-right">
            <a href="/Department/Create" class="btn btn-success btn-sm">
                <i class="fa fa-plus-circle"></i>
                Add New Record
            </a>
            <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body tablefont">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Branch Name</th>
                    <th>Department Name</th>
                    <th>Department Short Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.BranchName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.DEPARTMENT_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.DEPARTMENT_SHORT_NAME)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit","Department",new{Id=item.DEPARTMENT_ID })" class="btn btn-xs btn-info" title="View"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

